@model WebApplication1.Models.Authorization.Validation.AuthorisationUserView 
<!doctype html>
@{ 
    ViewData["Title"] = "Registration";
}
<head>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="text-light">
        <h3>Input data for registering</h3>
        <div>
            <form method="post">
                <div class="form-group">
                    <label for="username">Username:</label>
                    <input class="form-control" type="text" id="username" name="UserName"/>
                </div>
                <div class="form-group">
                    <label for="email">Email^</label>
                    <input class="form-control" type="email" id="email" name="Email"/>
                </div>
                <div class="form-group">
                    <label for="pass">Password:</label>
                    <input class="form-control" type="password" id="pass" name="Password"/>
                </div>
                <div class="form-group">
                    <label for="confirmpass">Confirm password:</label>
                    <input class="form-control" type="password" id="confirmpass" name="ConfirmPassword"/>
                </div>
                <div>
                    <button class="btn btn-light">Register</button>
                </div>
            </form>
        </div>
    </div>
</body>
