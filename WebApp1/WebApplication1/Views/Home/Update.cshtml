@model Product
@{ 
    ViewData["Title"] = "Modify Product";
}
<!doctype html>
<html>
<head>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div>
        <h2>Old data:</h2>
        <table class="table table-dark">
            <tr>
                <th>Product name:</th>
                <td>@Model.ProductName</td>
                <th>Product cost:</th>
                <td>@Model.Cost</td>
            </tr>
        </table>
    </div>
    <div>
        <form method="post">
            <h2>Input new data:</h2>
            <input type="hidden" value="@Model.ID" name="ID" />
            <table class="table">
                <tr>
                    <th>Product name:</th>
                    <td><input type="text" name="ProductName" value="@Model.ProductName" /></td>

                </tr>
                <tr>
                    <th>Product cost:</th>
                    <td><input type="text" name="Cost" value="@Model.Cost" /></td>
                </tr>
            </table>
            <button type="submit" class="btn btn-outline-dark">Update</button>
        </form>

    </div>
</body>
</html>
