@model Manager
@{
    ViewData["Title"] = "Modify Manager";
}
<!doctype html>
<html>
<head>
    <title>@ViewBag.Title</title>
</head>
<body class="navbar-dark">
    <div>
        <h2>Old data:</h2>
        <table class="table table-dark">
            <tr>
                <th>Manager name:</th>
                <td>@Model.ManagerName</td>
            </tr>
        </table>
    </div>
    <div>
        <form method="post">
            <input type="hidden" value="@Model.ManagerId" name="ManagerId" />
            <h2>Input new data:</h2>
            <table class="table">
                <tr>
                    <th>Product name:</th>
                    <td><input type="text" name="ManagerName" value="@Model.ManagerName" /></td>
                </tr>
            </table>
            <button type="submit" class="btn btn-outline-dark">Update</button>
        </form>
    </div>
</body>
</html>