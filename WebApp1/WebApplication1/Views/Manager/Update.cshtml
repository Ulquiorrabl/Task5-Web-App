@model Manager
@{
    ViewData["Title"] = "Modify Manager";
}
<!doctype html>
<html>
<head>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="text-light">
        <div>
            <h2>Old data:</h2>
            <table class="table table-dark">
                <tr>
                    <th>Manager name:</th>
                    <td>@Model.ManagerName</td>
                </tr>
            </table>
        </div>
        <div>
            <form method="post">
                <input type="hidden" value="@Model.ManagerId" name="ManagerId" />
                <h2>Input new data:</h2>
                <div class="form-group">
                    <label for="managerNameInput"></label> Manager name:
                    <input id="managerNameInput" class="form-control" type="text" name="ManagerName" value="@Model.ManagerName" />
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div> 
</body>
</html>