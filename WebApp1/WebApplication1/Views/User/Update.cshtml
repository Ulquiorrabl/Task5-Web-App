@model User
@{
    ViewData["Title"] = "Modify User";
}
<!doctype html>
<html>
<head>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="text-light" >
        <div>
            <h2>Old data:</h2>
            <table class="table table-dark">
                <tr>
                    <th>Manager name:</th>
                    <td>@Model.UserName</td>
                </tr>
            </table>
        </div>
        <div>
            <form method="post">
                <h2>Input new data:</h2>
                <input type="hidden" value="@Model.UserId" name="UserId" />
                <div class="form-group">
                    <label for="userNameInput">Product name:</label>
                    <input class="form-control" type="text" name="UserName" value="@Model.UserName" />
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
    
</body>
</html>