@model User
@{
    ViewData["Title"] = "Modify User";
}
<!doctype html>
<html>
<head>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div>
        <h2>Old data:</h2>
        <table class="table table-dark">
            <tr>
                <th>Manager name:</th>
                <td>@Model.UserName</td>
            </tr>
        </table>
    </div>
    <div>
        <form method="post">
            <h2>Input new data:</h2>
            <input type="hidden" value="@Model.UserId" name="UserId" />
            <table class="table">
                <tr>
                    <th>Product name:</th>
                    <td><input type="text" name="UserName" value="@Model.UserName" /></td>
                </tr>
            </table>
            <button type="submit" class="btn btn-outline-dark">Update</button>
        </form>
    </div>
</body>
</html>